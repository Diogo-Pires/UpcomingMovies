<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpcomingMovies.Views.MovieDetailed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="300" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Text="{Binding MovieTitle}" Grid.Row="0" Grid.Column="0" />
        <Image  Source="{Binding PosterPath}" Grid.Row="1" Aspect="AspectFit" HorizontalOptions="Fill" VerticalOptions="Fill" />
        <Label Text="{Binding ReleaseDate}" Grid.Row="2" Grid.Column="0" />
        <Label Text="{Binding Genre}" Grid.Row="3" Grid.Column="0" />
        <Label Text="{Binding Overview}" Grid.Row="4" Grid.Column="0" />
    </Grid>
    
</ContentPage>